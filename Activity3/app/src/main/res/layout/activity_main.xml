<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Unit 3 Converter"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:layout_editor_absoluteX="154dp"
        tools:layout_editor_absoluteY="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Starting Amount"
            tools:layout_editor_absoluteX="17dp"
            tools:layout_editor_absoluteY="64dp" />

        <EditText
            android:id="@+id/editTextAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            tools:text="0.0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonConverterToDollar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonDollarClick"
            android:text="Convert to Dollars"
            tools:layout_editor_absoluteX="55dp"
            tools:layout_editor_absoluteY="136dp" />

        <Button
            android:id="@+id/buttonConvertToEuros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonEuroClick"
            android:text="Convert to Euros" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resulting Amount" />

        <EditText
            android:id="@+id/textViewResult"
            android:layout_width="33dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            tools:text="0.0" />
    </LinearLayout>

</LinearLayout>